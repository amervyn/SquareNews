@model SquareNews.Web.Models.ArticleResult

@{
    ViewBag.Title = "SquareNews.com";
}

<h3>Total Results: @Model.TotalResults</h3>

<div class="container-fluid">
    <div class="row">
        @for (int i = 0; i < Model.Articles.Count; i++)
        {
            if (i > 0 && i % 2 == 0)
            {
                @:</div><div class="row">
                // close and start new row
            }
            <div class="col-md-6" style="margin-top:1px;margin-bottom:1px">
                <a href="@Model.Articles[i].Url" class="d-block mb-6">
                    <img class="rounded img-fluid" src="@Model.Articles[i].ImageUrl">
                    <div style="position: absolute; bottom: 8px; left: 16px; background-color:white;color:black; font-size:14pt">@Model.Articles[i].Headline</div>
                    <div style="position: absolute; top: 8px; left: 16px; background-color:white;color:black; font-weight:bold; font-size:16pt">@Model.Articles[i].Country</div>
                </a>
            </div>
        }
    </div>
</div>

