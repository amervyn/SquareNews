@model List<SquareNews.Lib.Entities.NewsArticle>

<style type="text/css">



    .col-sm-4 {
        transition: transform .25s, background .25s;
    }

        .col-sm-4:hover {
            transform: scale(1.1);
            background: white;
            position: relative;
            z-index: 1;
        }

    .mylink {
        display: none;
    }

    .loading {
        background: transparent url('../../loading_spinner.gif') center no-repeat;
    }
</style>



    @if (Model.Any())
    {
        var art = Model;

        while (art.Any())
        {

            @Html.Partial("_ArticlePartialRow", art.Take(3).ToList())

            art = art.Skip(3).ToList();

        }
    }



