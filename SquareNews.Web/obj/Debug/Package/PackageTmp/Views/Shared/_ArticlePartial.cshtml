@model List<SquareNews.Lib.Entities.NewsArticle>

<style type="text/css">

    @@media (min-width: 1200px) {
        .container-fluid {
            width: 1100px;
        }
    }


    .overlay {
        position: absolute;
        bottom: 100%;
        left: 0;
        right: 0;
        background-color: black;
        overflow: hidden;
        width: 100%;
        height: 0;
        transition: .4s ease;
    }

    .article:hover .overlay {
        bottom: 0;
        height: 100%;
    }

    .article:hover .loading{
        opacity:0.4;
    }

    .text {
        color: white;
        font-size: 20px;
        position: absolute;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
        text-align: center;
    }


    .col-sm-4 {
        transition: transform .25s, background .25s;
    }

        .col-sm-4:hover {
            transform: scale(1.1);
            background: white;
            position: relative;
            z-index: 1;
        }

    .loading {
        background: transparent url('../../loading_spinner.gif') center no-repeat;
    }
</style>



@if (Model.Any())
{
    var art = Model;

    while (art.Any())
    {

        @Html.Partial("_ArticlePartialRow", art.Take(3).ToList())

        art = art.Skip(3).ToList();

    }
}



